.shop {
  font-family: sans-serif;
  margin: 0;
  padding: 0;
  .big-header {
    background: #455C7B;
    color: #FFBC67;
    .inflex {
      padding-top: 1ex;
      text-transform: uppercase;
      opacity: 0.7;
      font-size: 24pt;
    }
    .tagline {
      margin: 1ex 0;
      font-size: 32pt;
      width: 564px;
    }
    .subline {
      font-size: 16pt;
      opacity: 0.6;
      text-transform: uppercase;
      padding-bottom: 1ex;
    }
  }
  .wrap {
    margin: 0 15px;
  }
}
